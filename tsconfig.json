{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "newLine": "lf",
    "sourceMap": true,
    "jsxImportSource": "solid-js",
    "types": ["types.d.ts"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["types.ts"],
  "exclude": ["node_modules/"]
}